{
    "private": true,
    "type": "module",
    "name": "fido",
    "version": "1.0.0",
    "description": "Fido: Automating Accounting with Ease",
    "author": "anas1412",
    "main": "main.cjs",
    "scripts": {
        "start": "electron .",
        "dev": "vite",
        "build": "vite build",
        "laravel:prod": "call scripts/build-laravel.bat",
        "dist": "npm run laravel:prod && npm run build && electron-builder",
        "dev:clear": "php artisan optimize:clear"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "autoprefixer": "^10.4.2",
        "axios": "^1.11.0",
        "electron": "^37.2.6",
        "electron-builder": "^24.13.3",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.1.0",
        "vite": "^7.1.2"
    },
    "dependencies": {
        "dotenv": "^17.2.1",
        "get-port": "^7.1.0"
    },
    "build": {
        "appId": "com.yourcompany.fido",
        "productName": "Fido",
        "asar": true,
        "win": {
            "icon": "public/images/favicon.ico",
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true
        },
        "files": [
            "main.cjs",
            "package.json",
            "dist/**/*",
            "preload.js"
        ],
        "extraResources": [
            {
                "from": ".",
                "to": "app",
                "filter": [
                    "**/*",
                    "!dist",
                    "!node_modules",
                    "!.git",
                    "!electron-builder.yml",
                    "!.idea",
                    "!.vscode"
                ]
            }
        ]
    }
}
