{
    "private": true,
    "type": "module",
    "name": "fido",
    "version": "1.0.0",
    "description": "Fido: Automating Accounting with Ease",
    "author": "anas1412",
    "main": "main.cjs",
    "scripts": {
        "start": "electron .",
        "dev": "vite",
        "build": "vite build",
        "dist": "npm run build && electron-builder",
    "postdist": "robocopy .\\vendor .\\dist\\win-unpacked\\resources\\app.asar.unpacked\\vendor /E /IS /NP && icacls .\\dist\\win-unpacked\\resources\\app.asar.unpacked\\storage /grant Users:(OI)(CI)F /T"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "autoprefixer": "^10.4.2",
        "axios": "^1.6.4",
        "electron": "^37.2.6",
        "electron-builder": "^26.0.12",
        "laravel-vite-plugin": "^1.0",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.1.0",
        "vite": "^5.0"
    },
    "dependencies": {
        "get-port": "^7.1.0"
    },
    "build": {
      "appId": "com.yourcompany.fido",
      "productName": "Fido",
      "files": [
        "**/*"
      ],
      "win": {
        "icon": "public/images/favicon.ico"
      },
      "asarUnpack": [],
      "extraResources": [
        {
          "from": "vendor",
          "to": "vendor",
          "filter": ["**/*"]
        },
        {
          "from": "php",
          "to": "php",
          "filter": ["**/*"]
        },
        {
          "from": "artisan",
          "to": "artisan"
        },
        {
          "from": "bootstrap",
          "to": "bootstrap",
          "filter": ["**/*"]
        },
        {
          "from": "app",
          "to": "app",
          "filter": ["**/*"]
        },
        {
          "from": "config",
          "to": "config",
          "filter": ["**/*"]
        },
        {
          "from": "database",
          "to": "database",
          "filter": ["**/*"]
        },
        {
          "from": "public",
          "to": "public",
          "filter": ["**/*"]
        },
        {
          "from": "resources",
          "to": "resources",
          "filter": ["**/*"]
        },
        {
          "from": "routes",
          "to": "routes",
          "filter": ["**/*"]
        },
        {
          "from": "storage",
          "to": "storage",
          "filter": ["**/*"]
        },                                                                                                                                
        {                                                                                                                                     
          "from": ".env.example",                                                                                                             
          "to": ".env.example"
       }                                                                                                                                     
   ]                                                                                                                                       
  }
}