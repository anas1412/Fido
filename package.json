{
    "private": true,
    "type": "module",
    "name": "fido",
    "version": "1.0.0",
    "description": "Fido: Automating Accounting with Ease",
    "author": "anas1412",
    "main": "main.cjs",
    "scripts": {
        "start": "electron .",
        "dev": "vite",
        "build": "vite build",
        "dist": "npm run build && electron-builder"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "autoprefixer": "^10.4.2",
        "axios": "^1.6.4",
        "electron": "^31.0.2",
        "electron-builder": "^24.13.3",
        "laravel-vite-plugin": "^1.0",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.1.0",
        "vite": "^5.0"
    },
    "dependencies": {
        "get-port": "^7.1.0"
    },
    "build": {
        "appId": "com.yourcompany.fido",
        "productName": "Fido",
        "asar": true,
        "win": {
            "icon": "public/images/favicon.ico",
            "target": "nsis"
        },
        "files": [
            "main.cjs",
            "package.json",
            "dist/**/*"
        ],
        "extraResources": [
            {
                "from": ".",
                "to": "app",
                "filter": [
                    "**/*",
                    "!dist",
                    "!node_modules",
                    "!.git",
                    "!electron-builder.yml",
                    "!.idea",
                    "!.vscode"
                ]
            }
        ],
        "extraFiles": [
            {
                "from": "storage",
                "to": "storage"
            }
        ]
    }
}